#!/bin/sh

wifirun() { \
	bssid=$(nmcli device wifi list | sed -n '1!p' | dmenu -p "Select Wifi ðŸ“¶ :" -l 11 | awk '{print $1}')
	pass=$(printf "" | dmenu -p "Enter Passphrase ðŸ”‘ :")
	connect=$(nmcli device wifi connect $bssid password $pass | cut -d' ' -f2 | cut -b 2-5)
	case $connect in
		wlo1 )
			notify-send "ConnectingðŸ¤...." "You're ðŸ¤Connected To The WorldðŸŒ...."
			break;;
		
		onne )
			notify-send -u critical "Wrong PassphraseðŸ”‘...."
			break;;
		* )
			notify-send -u critical "ErrorðŸ›‘: 404...."
			break;;
	esac
}

if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null
then
	notify-send "You're Already ðŸ¤Connected To The WorldðŸŒ...."
	opt=$(printf "" | dmenu -p "Want To Switchâ™»  Network (y/n):")
	case $opt in
		[yY][eE][sS]|[yY] )
			wifirun
			break;;
		[nN][oO]|[nN] )
			exit 1
			break;;
		* )
			notify-send -u critical "Sorry, Option âŒNot Available...."
			break;;
	esac
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null
then
	wifirun
fi
